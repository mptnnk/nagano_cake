<div class="container">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table class="table table-borderless">
    <tr>
      <th>名前</th>
      <td>(姓)<%= f.text_field:last_name %> (名)<%= f.text_field:first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>(セイ)<%= f.text_field:last_name_kana %> (メイ)<%=f.text_field:first_name_kana %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field:email %></td>
    </tr>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td><%= f.text_field:postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_area:address,size:"50x1"%></td>
    </tr>
    <tr>
      <th>電話番号(ハイフンなし)</th>
      <td><%= f.telephone_field:telephone_number %></td>
    </tr>
    <tr>
      <th>
        パスワード
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em><br>
        <% end %>
        </th>
      <td>
        <%= f.password_field:password %>
      </td>
    </tr>
    <tr>
      <th>パスワード（確認用）</th>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <th></th>
    <td><%= f.submit"新規登録"%></td>
  </table>

  <!--<div class="field">-->
