<div class="container">
  <div class="row">
    
    <table class="table table-borderless table-hover">
      <tr>
        <th class="table-active">ジャンル検索</th>
      </tr>
      <% genres.each do |genre|%>
      <tr>
       <td>
        <%= link_to items_path(genre_id: genre.id) do %>
         <%= genre.name %>
        <% end %>
       </td>
      </tr>
      <% end %>
    </table>
    
  </div>
</div>