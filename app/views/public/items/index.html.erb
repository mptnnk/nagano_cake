<div class="container">
  <div class="row">
    <div class="col-md-2 mb-2 mr-auto">
      <%= render 'genre', genres: @genres %>
    </div>
    <div class="col-md-10">
      <h4>
        <% if params[:genre_id] %>
         <%= @genre.name %>一覧
        <% else %>
         商品一覧
        <% end %>
        <span class="small">全<%= @items_count %>件</span>
      </h4>

      <div class="mt-3 d-inline-flex flex-wrap align-items-center">
        <% @items.each do |item|%>
        <div class="item-list">
          <a class="thumnail p-2">
           <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_cake_image, size:'200x150'%>
           <% end %>
          </a>
          <div class="mt-2">
           <%= item.name %>
          </div>
          <div class="mt-2 mb-3">
           ￥<%= item.with_tax_price %>
          </div>
        </div>
        <% end %>
      </div>

      <%= paginate @items, theme: 'twitter-bootstrap-4' %>

     </div>
  </div>
</div>
