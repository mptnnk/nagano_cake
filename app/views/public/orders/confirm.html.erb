<div class="container">
  <h4>注文情報確認</h4>
  <div class="row ">

    <table class="table table-bordered" style="width: 75%">
      <thead>
        <tr class="table-active">
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @cart_items.each do |cart_item|%>
      <tbody>
        <tr>
          <td>
            <%= image_tag cart_item.item.cake_image,size:'100x100'%>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price %>円</td>
          <td><%= cart_item.amount %>個</td>
          <td><%= cart_item.subtotal.to_s(:delimited) %>円</td>
        </tr>
      </tbody>
      <% end %>
    </table>
    
    <%= form_with model: @order, url: orders_path, method: :post, local: true do |f|%>
    <table class="table table-bordered ml-2">
      <tr>
       <th class="table-active">送料</th>
       <td>
         <%= @order.shipping_cost.to_s(:delimited) %>円
         <%= f.hidden_field:shipping_cost, :value=> @order.shipping_cost %>
       </td>
      </tr>
      <tr>
       <th class="table-active">商品合計</th>
       <td>
         <%= @total_price.to_s(:delimited) %>円
       </td>
      </tr>
      <tr>
       <th class="table-active">請求合計</th>
       <td>
         <%= @order.total_payment.to_s(:delimited) %>円
         <%= f.hidden_field:total_payment, :value=> @order.total_payment %>
       </td>
      </tr>
    </table>
  </div>
  
  <div class="row">
    <table class="table table-borderless">
      <tr>
        <th style="width: 20%">支払方法</th>
        <td>
          <%= @order.payment_method_i18n %>
          <%= f.hidden_field:payment_method, :value=> @order.payment_method %>
        </td>
      </tr>
      <tr>
        <th>お届け先</th>
        <td>
          <%= "〒"+@order.postal_code %> <%= @order.address %><br>
          <%= @order.name %>
          <%= f.hidden_field:postal_code, :value=> @order.postal_code %>
          <%= f.hidden_field:address, :value=> @order.address %>
          <%= f.hidden_field:name, :value=> @order.name %>
        </td>
      </tr>
    </table>
  </div>
  
  <div class="mb-3" style="text-align:center">
    <%= f.submit"注文を確定する", class:'btn btn-success'%>
  </div>
  <% end %>
</div>