<div class="container">
  <h4>注文情報確認</h4>
  <div class="row ">
    
    <table class="table table-bordered" style="width: 75%">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @cart_items.each do |cart_item|%>
      <tbody>
        <tr>
          <td>
            <%= image_tag cart_item.item.image,size:'100x100'%>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    
    <table class="table table-bordered ml-2" style="width:20%">
      <tr>
       <th>送料</th>
       <td><%= @order.shipping_cost.to_s(:delimited) %></td>
      </tr>
      <tr>
       <th>商品合計</th>
       <td><%= @order.total_payment.to_s(:delimited) %></td>
      </tr>
      <tr>
       <th>請求合計</th>
       <td><%= (@order.shipping_cost + @order.total_payment).to_s(:delimited) %></td>
      </tr>
    </table>
  </div>
  
  <div class="row">
    <table class="table table-borderless">
      <tr>
        <th style="width: 20%">支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>お届け先</th>
        <td>
          <%= "〒"+@order.postal_code %> <%= @order.address %>
          <%= @order.name %>
        </td>
      </tr>
    </table>
    
    <div class="mb-3" style="text-align:center">
      <%= link_to"注文を確定する",orders_path,method: :post, class:'btn btn-success'%>
    </div>
    
  </div>
</div>