<div class="container">
  <h4>配送先登録／一覧</h4>
  <%= form_with model: @address, url: addresses_path, method: :post, local: true do |address|%>
  <table class="table table-borderless table-sm">
    <tr>
      <th>郵便番号（ハイフンなし）</th>
      <td><%= address.text_field:postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= address.text_area:address,size:"50x1" %></td>
    </tr>
    <tr>
      <th>宛名</th>
      <td><%= address.text_field:name %></td>
      <td><%= address.submit"新規登録",class:'btn btn-success' %></td>
    </tr>
  </table>
  <% end %>
  
  <table class="table table-bordered">
    <thead>
      <th scope="col" style="width: 20%">郵便番号</th>
      <th scope="col" style="width: 30%">住所</th>
      <th scope="col" style="width: 10%">宛名</th>
      <th scope="col" style="width: 40%"></th>
    </thead>
    <tbody>
      <% @addresses.each do |addresses|%>
      <tr>
        <td><%= addresses.postal_code %></td>
        <td><%= addresses.address %></td>
        <td><%= addresses.name %></td>
        <td><%= link_to"編集する",edit_address_path(addresses.id),class:'btn btn-success'%></td>
        <td><%= link_to"削除する",addresses_path(addresses.id),method: :delete,class:'btn btn-danger'%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>