<div class="container">
  <h4>配送先編集</h4>
  <%= form_with model: @address, url: address_path, method: :patch, local: true do |address|%>
  <table class="table table-borderless table-sm">
    <tr>
      <th>郵便番号（ハイフンなし）</th>
      <td><%= address.text_field:postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= address.text_area:address,size:"50x1" %></td>
    </tr>
    <tr>
      <th>宛名</th>
      <td><%= address.text_field:name %></td>
      <td><%= address.submit"変更を保存",class:'btn btn-success'%></td>
    </tr>
  </table>
  <% end %>
</div>