<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="page-title">会員情報編集</h4>

      <%= form_with model: @customer, url: customers_information_path, local: true do |customer|%>

      <div class="form-group mt-3 ml-2">
        <%= customer.label:"氏　　名", class:"col-lg-2 font-weight-bold"%>
        <%= customer.text_field:last_name %>　<%= customer.text_field:first_name %>
      </div>

      <div class="form-group ml-2">
        <%= customer.label:"フリガナ", class:"col-lg-2 font-weight-bold"%>
        <%= customer.text_field:last_name_kana %>　<%= customer.text_field:first_name_kana %>
      </div>

      <div class="form-group ml-2">
        <%= customer.label:"郵便番号", class:"col-lg-2 font-weight-bold"%>
        <%= customer.text_field:postal_code %>
      </div>

      <div class="form-group ml-2">
        <%= customer.label:"住　　所", class:"col-lg-2 font-weight-bold"%>
        <%= customer.text_area:address, size:"60x1" %>
      </div>

      <div class="form-group ml-2">
        <%= customer.label:"電話番号", class:"col-lg-2 font-weight-bold"%>
        <%= customer.telephone_field:telephone_number %>
      </div>

      <div class="form-group ml-2">
        <%= customer.label:"メールアドレス", class:"col-lg-2 font-weight-bold"%>
        <%= customer.email_field:email %>
      </div>

      <div class="row">
        <div class="col-lg-2 ml-2"></div>
        <span class="d-grid gap-2 col-4 mb-3">
          <%= customer.submit "編集内容を保存", class:'btn btn-success d-grid gap-2 col-6'%>
        </span>
        <span>
          <%= link_to "退会する", customers_unsubscribe_path, class:'btn btn-danger d-grid gap-2'%>
        </span>
      </div>
      <% end %>

    </div>
  </div>
</div>