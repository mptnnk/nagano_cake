<div class="container">
  <h4>マイページ</h4>

  <table class="table table-borderless">
    <th style="width: 20%">登録情報</th>
    <td><%= link_to"編集する",customers_information_edit_path,class:'btn btn-success btn-sm mb-3' %></td>
  </table>
  
  <table class="table table-bordered">
    <tr>
      <th style="width: 20%">氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  
  <table class="table table-borderless">
    <th style="width: 20%">配送先</th>
    <td><%= link_to"一覧を見る",addresses_path,class:'btn btn-primary btn-sm mb-3' %></td>
  </table>
  
  <table class="table table-borderless">
    <th style="width: 20%">注文履歴</th>
    <td><%= link_to"一覧を見る",orders_path,class:'btn btn-primary btn-sm mb-3' %></td>
  </table>


</div>
