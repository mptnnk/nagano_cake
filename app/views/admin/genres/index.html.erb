<div class="container">
  <h4 class="page-title">ジャンル一覧・追加</h4>
  <div class="row">
    <div class="col-md-8 mt-3 ml-2">

      <%= form_with model: @genre, url: admin_genres_path, local: true do |genre| %>
      <!--模範回答にformをrenderにする書き方があるので参考にしてもよい-->
      <div class="form-group">
        <%= genre.label :"ジャンル名", class:"col-md-3 font-weight-bold"%>
        <%= genre.text_field :name, class:"col-md-3" %>
        <%= genre.radio_button :is_active, true %>
        <%= genre.label :is_active, "有効", class:"text-active" %>
        <%= genre.radio_button :is_active, false %>
        <%= genre.label :is_active, "無効", class:"text-invalid" %>
        <%= genre.submit "新規登録", class:'btn btn-success col-md-2 ml-4'%>
      </div>
      <% end %>

    </div>

    <div class="col-md-5 mt-3">
      <table class="table">
        <thead class="table-active">
          <th>ジャンル名</th>
          <th>状態</th>
          <!--ジャンルの有効ステータス表示を追加-->
          <th></th>
          <!--<th colspan="2"></th>-->
        </thead>
        <tbody>
          <% @genres.each do |genre|%>
          <tr>
            <!--<td>　<%= genre.name %></td>-->
            <td><%= link_to genre.name, admin_items_path(genre_id: genre.id), class:"underline" %></td>
            <!--ジャンルごとのアイテム一覧の表示を追加-->
            <td>
              <% if genre.is_active? %>
                <span class="text-active">有効</span>
              <% else %>
                <span class="text-invalid">無効</span>
              <% end %>
            </td>
            <td class="text-right"><%= link_to"編集する",edit_admin_genre_path(genre.id),class:'btn btn-success' %>　</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
