<div class="container">
  <h4 class="page-title">商品編集</h4>
  <div class="row">
    <div class="col-md-11 ml-5">
      <%= form_with model: @item,url: admin_item_path(@item) , multipart: true, local:true do |item|%>
      <table class="table table-borderless ml-5">
       <tr>
         <th style="width: 20%">商品画像</th>
         <td>
           <input class="form-control-file cake_image" accept="image/*" type="file" name="item[cake_image]" id="item_cake_image"/>
         </td>
       </tr>
       <tr>
         <th>商品名</th>
         <td><%= item.text_field:name, size:"40x1" %></td>
       </tr>
       <tr>
         <th>商品説明</th>
         <td><%= item.text_area:introduction, size:"40x5" %></td>
       </tr>
       <tr>
         <th>ジャンル</th>
         <td><%= item.collection_select(:genre_id,@genres,:id,:name,include_blank:"--選択してください--")%></td>
       </tr>
       <tr>
         <th>税抜価格</th>
         <td><%= item.number_field:price %>円</td>
       </tr>
       <tr>
         <th>販売ステータス</th>
         <td>
           <%= item.radio_button:is_active,true %>
           <%= item.label:is_active,"販売中",{value:"true",style:"display:inline-block;"}%>
           <%= item.radio_button:is_active,false %>
           <%= item.label:is_active,"販売停止中",{value:"false",style:"display:inline-block;"}%>
         </td>
       </tr>
       <tr>
         <th></th>
         <td><%= item.submit"変更を保存",class:'btn btn-success col-md-2'%></td>
       </tr>
      </table>
      <% end %>

    </div>
  </div>

</div>