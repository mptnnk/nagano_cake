<div class="container">
  <h4><%= @customer %>さんの注文履歴一覧</h4>
  <table class="table">
    <thead class="table-active">
      <tr>
        <th>購入日時</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <% @orders.each do |order|%>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
           <%= order.created_at.strftime('%Y/%m/%d')%>
          <% end %>
        </td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.status_i18n %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>