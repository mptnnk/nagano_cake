<div class="container">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <div class="col">
      <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch, local: true do |order|%>
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td>
            <%= link_to admin_customer_path(@customer.id) do %>
             <%= @order.customer.last_name %><%= @order.customer.first_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= "〒"+@order.postal_code.to_s.insert(3,"-") %>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= order.select :status, Order.statuses_i18n.invert, {prompt: false} %>
            <%= order.submit"更新する", class:'btn btn-success btn-sm' %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered"></table>
      <tabel class="table table-borderless"></tabel>
    </div>
  </div>

</div>