<div class="container">
  <h4 class="page-title">会員一覧</h4>
  <div class="row">
    <div class="col-md-12">
      <table class="table mt-2">
       <thead class="table-active">
        <tr>
         <th>会員ID</th>
         <th>氏名</th>
         <th>メールアドレス</th>
         <th>ステータス</th>
        </tr>
       </thead>

       <tbody>
        <% @customers.each do |cs|%>
         <tr>
          <td><%= cs.id %></td>
          <td>
            <%= link_to admin_customer_path(cs.id) do %>
             <%= cs.last_name %>
             <%= cs.first_name %>
            <% end %>
          </td>
          <td><%= cs.email %></td>
          <td>
            <% if cs.is_deleted == false %>
             <p class="text-success font-weight-bold">有効</p>
            <% else %>
             <p class="text-secondary">退会</p>
            <% end %>
          </td>
        </tr>
       <% end %>
      </tbody>
     </table>
    </div>
  </div>

 <%= paginate @customers, theme: 'twitter-bootstrap-4' %>

</div>