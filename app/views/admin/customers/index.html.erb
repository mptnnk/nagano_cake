<div class="container">
  <h4>会員一覧</h4>
  <table class="table">
    <thead>
      <tr>
       <th>会員ID</th>
       <th>氏名</th>
       <th>メールアドレス</th>
       <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |cs|%>
      <tr>
        <td><%= cs.id %></td>
        <td>
          <%= link_to admin_customer_path(cs.id) do %>
           <%= cs.last_name %>
           <%= cs.first_name %>
          <% end %>
        </td>
        <td><%= cs.email %></td>
        <td>
          <% if cs.is_deleted == false %>
           <p class="text-success font-weight-bold">有効</p>
          <% else %>
           <p class="text-secondary">退会</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>