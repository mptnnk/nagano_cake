<div class="container">
  <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  <%= form_with model: @customer,url: admin_customer_path(@customer.id), method: :patch, local:true do |ce|%>
  <table class="table">
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= ce.text_field:last_name %>  <%= ce.text_field:first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= ce.text_field:last_name_kana %>  <%= ce.text_field:first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= ce.text_field:postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= ce.text_area :address,size: "50x1" %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= ce.telephone_field:telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= ce.email_field:email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <%= ce.radio_button:is_active, true %>
        <%= ce.label:is_active,"有効",{value:"true",style:"display:inline-block;"}%>
        <%= ce.radio_button:is_actice, false %>
        <%= ce.label:is_active,"退会",{value:"false",style:"display:inline-block;"}%>
        <!--ラジオボタンの書き方は模範回答が2行で終わってたから確認-->
      </td>
    </tr>
    <tr>
      <th></th>
      <td><%= ce.submit "変更を保存",class:'btn btn-success' %></td>
    </tr>
  </table>
  <% end %>
</div>