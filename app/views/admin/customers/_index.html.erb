<table class="table has_border">
  <thead class="table-active">
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>
  
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.full_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active? %>
            <span class="text-active">有効</span>
          <% else %>
            <span class="text-invalid">退会</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  
</table>